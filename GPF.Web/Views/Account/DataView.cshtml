</div>

<div class="row">
    <div class="col-xs-12">
        <h4>GPF Sessions:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Account</th>
                    <th>Degree ID</th>
                    <th>Concentration ID</th>
                    <th>Enter Year</th>
                    <th>Entering Quarter</th>
                    <th>Classes Per Quarter</th>
                    <th>Delivery Option</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GPFSessions != null)
                {
                    foreach (var session in Model.GPFSessions)
                    {
                        <tr>
                            <td>
                                @session.Id
                            </td>
                            <td>
                                @session.Account.Id
                            </td>
                            <td>
                                @session.Degree.Id
                            </td>
                            <td>
                                @session.Concentration.Id
                            </td>
                            <td>
                                @session.EnteringTerm.Year
                            </td>
                            <td>
                                @session.EnteringTerm.Quarter.Description
                            </td>
                            <td>
                                @session.ClassesPerQuarter
                            </td>
                            <td>
                                @session.ClassDeliveryOption.Description
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            No GPF Sessions found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
