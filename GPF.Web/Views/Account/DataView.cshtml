<div class="row">
    <div class="col-xs-12">
        <h4>Courses:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Department</th>
                    <th>Number</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Units</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Courses != null)
                {
                    foreach (var course in Model.Courses)
                    {
                        <tr>
                            <td>
                                @course.Id
                            </td>
                            <td>
                                @course.Department
                            </td>
                            <td>
                                @course.Number
                            </td>
                            <td>
                                @course.Title
                            </td>
                            <td>
                                @course.Description
                            </td>
                            <td>
                                @course.Units
                            </td>
                            <td>
                                @course.Active
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            No Courses found.
                        </td>
                    </tr>
